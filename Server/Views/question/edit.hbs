<div class="container mt-5">
    <h2>Edit Question</h2>
    <form action="/survey/{{survey._id}}/questions/{{question._id}}/edit" method="POST" class="mt-3">
        <div class="form-group">
            <label for="text">Question Text</label>
            <input type="text" class="form-control" id="text" name="text" value="{{question.text}}" required>
        </div>
        {{!-- Unable to change question type, only edit name and/or mulitple choice selections --}}
        <div class="form-group">
            <label for="type">Question Type</label>
            <input style="background-color: #eeeeee;" type="text" class="form-control" id="type" name="type" value="{{question.type}}" readonly>
        </div>
        <div class="form-group">
            <label for="options">Options (for Multiple Choice, separate by comma)</label>
            <input type="text" class="form-control" id="options" name="options" value="{{#each question.options}}{{this.text}}{{#unless @last}}, {{/unless}}{{/each}}">
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>