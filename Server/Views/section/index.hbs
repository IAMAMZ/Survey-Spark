<div class="container mt-5">
    <h1>Sections of {{survey.title}}</h1>

    {{#if sections.length}}
        <div class="list-group mt-3">
            {{#each sections}}
                <div class="list-group-item flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between align-items-center">
                        <h5 class="mb-1">{{this.order}}. {{this.title}}</h5>
                        <div>
                            <a href="/{{../survey._id}}/sections/{{this._id}}/edit" class="btn btn-primary btn-sm">Edit</a>
                            <a href="/{{../survey._id}}/sections/{{this._id}}/delete" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">Delete</a>
                        </div>
                    </div>
                    <p class="mb-1">{{this.description}}</p>
                </div>
            {{/each}}
        </div>
    {{else}}
        <p class="mt-3">No sections have been added yet.</p>
    {{/if}}

    <a href="sections/add" class="btn btn-success mt-3">Add New Section</a>
</div>
